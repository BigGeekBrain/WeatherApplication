<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/yin_yang_2">

    <TextView
        android:id="@+id/requestCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"/>
    <TextView
        android:id="@+id/temperatureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/fellingTemperatureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fellingTemperature"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/pressureView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/humidityView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/rainfallView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rainfall"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/windSpeedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/windSpeed"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/windDirectionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/windDirection"
        android:visibility="gone"/>

</LinearLayout>